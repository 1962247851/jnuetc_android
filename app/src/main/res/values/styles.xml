<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="titleTextColor">@color/White</item>
    </style>

    <!-- 使用的主题是NoActionBar，所以要自己在toolbar上加主题-->
    <style name="actionbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.DayNight</item>
    </style>

    <style name="subTitleAppearance" parent="@style/Base.TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="MainTextAppearance" parent="@style/Base.TextAppearance.AppCompat">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
